{
  "name": "teste-backend",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "start": "ts-node-dev --files -r tsconfig-paths/register --inspect --ignore-watch node_modules src/index.ts",
    "build": "./node_modules/.bin/rimraf dist && ./node_modules/.bin/tsc",
    "test": "./node_modules/.bin/jest --runInBand --forceExit --detectOpenHandles",
    "test:coverage": "npm run test -- --coverage",
    "orm:init": "npm run build && ts-node -r tsconfig-paths/register ./node_modules/.bin/typeorm -d ./src/config/orm/orm.config.ts",
    "migration:generate": "npm run orm:init migration:generate",
    "migration:run": "npm run orm:init migration:run",
    "schema:drop": "npm run orm:init schema:drop"
  },
  "dependencies": {
    "better-sqlite3": "^9.4.3",
    "cookie": "^0.6.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.17.3",
    "jest": "^29.7.0",
    "jsonwebtoken": "^9.0.2",
    "mysql2": "^3.9.2",
    "reflect-metadata": "^0.2.1",
    "typeorm": "^0.3.20",
    "typeorm-naming-strategies": "^4.1.0"
  },
  "devDependencies": {
    "@types/cookie": "^0.6.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.13",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.6",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^1.1.8",
    "tsconfig-paths": "^3.12.0",
    "typescript": "^4.6.2"
  }
}
